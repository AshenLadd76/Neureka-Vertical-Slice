/* Root of the page - fills the editor window */
.tile-extractor-root {
    display: flex;
    flex-direction: column;
    flex-grow: 1;           /* expand to fill parent */
    width: 100%;
    height: 100%;
    justify-content: flex-start;
    align-items: stretch;
    background-color: #1e1e1e; /* root background for visibility */
}

/* ScrollView container */
.tile-extractor-scroll-view {
    display: flex;
    flex-direction: column; /* stack children vertically */
    flex-grow: 1; 
    flex-shrink: 0;          /* fill root vertically */
    width: 100%;
    height: 100%;
    min-width:100%
    min-height:100%;
    overflow: hidden;         /* scrollbars appear only when needed */
   
}

/* ScrollView content container - handles all children */


/* Main container holding columns */
.tile-extractor-main {
    display: flex;
    flex-direction: row;    /* default: columns side by side */
    flex-grow: 1;           /* fills content container */
    width: 100%;
    min-height: 100%;      /* minimum for visibility, adjust as needed */
}

/* Columns inside main container */
.tile-extractor-column {
    display: flex;
    flex-direction: column;
    flex: 1;                /* all columns share space equally */
    min-height: 600px;      /* prevents collapse when window is small */
 
    margin: 4px;

    border-width: 2px;
    border-color: grey;
    border-style: solid;
    border-radius: 4px; /* optional rounded corners */
    justify-content: center;
    align-items: center;
    padding-top: 20px;
    padding-right: 20px;
    padding-bottom: 20px;
    padding-left: 20px;
    
}



.tile-extractor-row
{
 display: flex;
    flex-direction: row;
    align-items: center;
    flex: 1;
    width:100%;
    height:150px;
}

