}

/* Config Settings */

.tile-extractor-config
{
    display: flex;
    flex-direction: column;
    flex: 1;                /* all columns share space equally */
        /* prevents collapse when window is small */
 
    margin: 4px;

    
 
    align-items: flex-start;
    width:100%; 
    padding-top: 20px;
    padding-right: 20px;   
    padding-bottom: 20px;   
    padding-left: 20px;      
    
    font-size:16px;
    unity-font-style: bold;

     
}

.tile-extractor-config-content
{
    display: flex;
    flex-direction: column; /* stack children vertically */
    align-items: flex-start; /* left justify */
    padding-top: 20px;          

}


